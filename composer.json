{
  "name": "yiisoft/yii2-app-basic",
  "description": "Yii 2 Basic Project Template",
  "keywords": [
    "yii2",
    "framework",
    "basic",
    "project template"
  ],
  "homepage": "https://www.yiiframework.com/",
  "type": "project",
  "license": "BSD-3-Clause",
  "support": {
    "issues": "https://github.com/yiisoft/yii2/issues?state=open",
    "forum": "https://www.yiiframework.com/forum/",
    "wiki": "https://www.yiiframework.com/wiki/",
    "irc": "ircs://irc.libera.chat:6697/yii",
    "source": "https://github.com/yiisoft/yii2"
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4.0",
    "yiisoft/yii2": "~2.0.45",
    "yiisoft/yii2-bootstrap5": "~2.0.2",
    "yiisoft/yii2-symfonymailer": "~2.0.3",
    "yiisoft/yii2-imagine": "~2.2.0",
    "yiisoft/yii2-authclient": "~2.2.0",
    "kartik-v/yii2-widget-typeahead": "dev-master",
    "kartik-v/yii2-editable": "dev-master",
    "kartik-v/yii2-widget-sidenav": "dev-master",
    "kartik-v/yii2-widget-select2": "dev-master",
    "kartik-v/yii2-icons": "~1.4.8",
    "kartik-v/yii2-widgets": "~3.4.1",
    "kartik-v/yii2-widget-activeform": "~1.6.4",
    "lav45/yii2-ajax-create": "0.2.*",   
    "siripravi/yii2-user-helper": "~1.0.0" ,    
    "luyadev/luya-core": "^2.3.1",
    "paulzi/yii2-json-behavior" : "~1.0.0",
    "kartik-v/yii2-tabs-x": "@dev",
    "kartik-v/yii2-bootstrap5-dropdown": "@dev",
    "exocet/yii2-bootstrap-material-design":"~2.4.0",
    "kartik-v/yii2-widget-affix": "*"

  },
  "require-dev": {
    "yiisoft/yii2-debug": "^2.0",
    "yiisoft/yii2-gii": "^2.0",
    "luyadev/luya-deployer": "^1.0",
    "twbs/bootstrap": "^4.0",
    "unglue/client": "^1.5"
  },
  "config": {
    "platform-check": false,
    "fxp-asset": {
      "enabled": false
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "luyadev/luya-composer": true
    }
  },
  "scripts": {
    "post-install-cmd": [
        "@composer run-script post-install-cmd --working-dir=vendor/exocet/yii2-bootstrap-material-design"
    ],
    "post-update-cmd": [
        "@composer run-script post-update-cmd --working-dir=vendor/exocet/yii2-bootstrap-material-design"
    ]
},
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ]
}
